<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="zaym.in.card5min.fragments.ListLoanFragment"
        android:label="@string/title_loans"
        tools:layout="@layout/fragment_list_loan" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_item_loan"
            app:destination="@id/navigation_item_loan" />
    </fragment>

    <fragment
        android:id="@+id/navigation_item_loan"
        android:name="zaym.in.card5min.fragments.ItemLoanFragment"
        android:label="fragment_description"
        tools:layout="@layout/fragment_item_loan" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="zaym.in.card5min.fragments.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_rules"
        android:name="zaym.in.card5min.fragments.RulesFragment"
        android:label="@string/title_rules"
        tools:layout="@layout/fragment_rules" />

</navigation>